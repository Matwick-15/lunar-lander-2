{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args":[
                "$compile_flags.txt",
                "main.c",
                "-o",
                "main"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./main",
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
        },
            
        
    ],
    "version": "2.0.0"
}